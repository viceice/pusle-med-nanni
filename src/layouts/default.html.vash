<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/images/favicon.ico" rel="shortcut icon">
    <title>@getPreparedTitle()</title>
    @html.raw(getBlock("meta").toHTML())
    @html.raw(getBlock("styles").add(["/css/metro.css", "/css/font-awesome.css", "/css/style.css"]).toHTML())

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body>
    <div class="header">
        @partial("menu.html", false)
    </div>

    <div class="container content">
        <h1>@document.title</h1>
        @html.raw(content)
    </div>
    @html.raw(getBlock("scripts").add(["/js/jquery.js", "/js/jquery.waypoints.js", "/js/metro.js"]).toHTML())
</body>
</html>
